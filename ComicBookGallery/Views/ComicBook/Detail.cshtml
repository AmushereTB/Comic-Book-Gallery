@model ComicBookGallery.Models.ComicBook

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Comic Book Detail";

}
<h1>@Model.SeriesTitle</h1>
<h2>@Model.IssueNumber</h2>
<h5>Description:</h5>
<p>@Html.Raw(Model.DescriptionHtml) </p>

@if (Model.Artists.Length > 0)
{

    <h5>Artists:</h5>
    <div>
        <ul>

            @foreach (var item in Model.Artists)
            {
                <li>  @item.Role: @item.Name  </li>

            }



        </ul>
    </div>
}
else
{
    <div>@Model.Warning</div>
}

